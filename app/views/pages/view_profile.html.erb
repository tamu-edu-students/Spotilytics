<% content_for :extra_css do %>
  <%= stylesheet_link_tag "profile", media: "all" %>
<% end %>

<main class="d-flex justify-content-center align-items-center main-full">
  <div class="text-center profile-content">
    <h1 class="text-light mb-4">View Profile</h1>
    
    <div class="spotify-card-profile card text-light text-center p-4 shadow-lg mx-auto">
      <% if @profile&.image_url.present? %>
        <img src="<%= @profile.image_url %>" 
             alt="<%= @profile.display_name %>" 
             class="rounded-circle mx-auto mb-3 profile-img">
      <% else %>
        <div class="profile-placeholder rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center">
          <i class="bi bi-person-fill text-secondary fs-1"></i>
        </div>
      <% end %>

      <h3 class="text-light mb-2"><%= @profile&.display_name || "-" %></h3>
      <p class="text-secondary mb-3"><%= number_with_delimiter(@profile&.followers.to_i) %> Followers</p>

      <% if @profile&.spotify_url.present? %>
        <%= link_to "Open Profile in Spotify", 
                    @profile.spotify_url, 
                    target: "_blank", 
                    rel: "noopener noreferrer", 
                    class: "btn profile-btn fw-semibold" %>
      <% end %>
    </div>
  </div>
</main>
